{
  "name": "@bmds/core",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "git@github.com:BrunnoM7/bmds.git",
  "author": "BrunnoM7 <brunno.marchetti7@gmail.com>",
  "license": "MIT",
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "stream": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "playgrounds/*"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "postcss": "8",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^2.0.0"
  },
  "nohoist": [
    "**/normalize-scss"
  ],
  "scripts": {
    "lint": "stylelint './**/*.scss'",
    "lint:fix": "yarn lint --fix",
    "build": "yarn lerna run build",
    "dev": "yarn lerna run dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "yarn lint:fix"
  },
  "resolutions": {
    "**/glob-parent": "^5.1.2"
  }
}
